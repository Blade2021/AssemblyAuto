int TestButton = 10;
int x;
class Debounce
{
  int currentTime;
  int previousTime = 0;
  int waitVar;
  int pinVar;
  int Check;
  
  public:
  Debounce(int ButtonCheck, long wait, int pin)
  {
    waitVar = wait;
    pinVar = digitalRead(pin);
    Check = ButtonCheck;
  }
  void Update(int& ButtonCheck){
    unsigned long currentTime = millis();
    if ((pinVar==HIGH) && (currentTime-previousTime >= waitVar)){
      Check = 1;
      previousTime=currentTime;
    }
    else {
      Check = 0;
    }
  }
};
Debounce Test(x, 200, 10);

void setup() {
  pinMode(TestButton, INPUT);
  Serial.begin(9600);
  Serial.println("Testing...");
}
void loop(int ButtonCheck) {
  Test.Update(x);
  if (x==1){
    Serial.println("Test");
  }
}
